#include <stdio.h>

int main() {
    int i,j,space;

    for(i=1;i<=3;i++){
    //print spaces

    for(space=i;space<3;space++){   
    printf(" ");
    }    

    //print stars
    for(j=1;j<=(2*i-1);j++){
    
    printf("*");
    }
    printf("\n");
    }
  
    return 0;
    }
output
       *
      ***
     *****
